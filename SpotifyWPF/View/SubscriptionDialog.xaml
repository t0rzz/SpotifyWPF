<UserControl x:Class="SpotifyWPF.View.SubscriptionDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="250" d:DesignWidth="450"
             MaxWidth="500" MaxHeight="350"
             Background="{DynamicResource CardBrush}"
             BorderBrush="{DynamicResource ControlBorderBrush}"
             BorderThickness="1">
    <UserControl.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button" BasedOn="{x:Null}">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ControlForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource ControlHighlightBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource ControlHighlightForegroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource ControlPressedBrush}"/>
                            </Trigger>
                            <Trigger Property="IsDefault" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid FocusManager.FocusedElement="{Binding ElementName=OkButton}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Premium icon -->
        <Border Grid.Row="0" Background="{DynamicResource AccentBrush}" CornerRadius="4,4,0,0" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="16,12">
                <TextBlock Text="â­" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold"
                           Foreground="{DynamicResource AccentForegroundBrush}" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Message -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="20,0,20,20">
            <StackPanel>
                <TextBlock Text="{Binding Message}" FontSize="14"
                           Foreground="{DynamicResource ControlForegroundBrush}"
                           TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,0,0,16"/>

                <!-- Feature description -->
                <Border Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}"
                        BorderThickness="1" CornerRadius="6" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{Binding FeatureName}" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding FeatureDescription}" FontSize="13"
                                   Foreground="{DynamicResource ControlForegroundBrush}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Upgrade prompt -->
                <TextBlock Text="{Binding UpgradeMessage}" FontSize="13" FontWeight="SemiBold"
                           Foreground="{DynamicResource ControlForegroundBrush}"
                           TextWrapping="Wrap" HorizontalAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>

        <!-- OK Button -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <Button x:Name="OkButton" Content="{Binding OkButtonText}" Command="{Binding OkCommand}"
                    Style="{StaticResource DialogButtonStyle}" IsDefault="True"
                    AutomationProperties.Name="OK"/>
        </StackPanel>
    </Grid>
</UserControl>